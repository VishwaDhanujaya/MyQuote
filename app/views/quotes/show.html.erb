<section class="quote-detail">
  <article class="quote-detail__card">
    <p class="quote-detail__text">“<%= @quote.text %>”</p>

    <div class="quote-detail__footer">
      <span>Shared by <strong><%= @quote.user.first_name %></strong></span>
      <span>From <strong><%= [@quote.philosopher.first_name, @quote.philosopher.last_name].compact.join(' ') %></strong></span>
    </div>
  </article>

  <div class="quote-detail__meta">
    <div class="info-grid">
      <div>
        <strong>Visibility</strong>
        <div><%= @quote.is_public? ? "Public" : "Private" %></div>
      </div>
      <% if @quote.publication_year.present? %>
        <div>
          <strong>Publication Year</strong>
          <div><%= @quote.publication_year %></div>
        </div>
      <% end %>
      <% if @quote.user_comment.present? %>
        <div>
          <strong>Comment</strong>
          <div><%= @quote.user_comment %></div>
        </div>
      <% end %>
      <% if @quote.categories.any? %>
        <div>
          <strong>Categories</strong>
          <div class="quote-card__chips">
            <% @quote.categories.each do |category| %>
              <span class="chip"><%= category.name %></span>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
    <%= link_to "Back to quotes", quotes_path, class: "back-link" %>
  </div>
</section>
