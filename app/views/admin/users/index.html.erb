<h1>Manage Users</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Role</th>
      <th>Status</th>
      <th colspan="4"></th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.first_name %> <%= user.last_name %></td>
        <td><%= user.email %></td>
        <td><%= user.role.humanize %></td>
        <td><%= user.status.humanize %></td>
        <td><%= link_to "Edit", edit_admin_user_path(user) %></td>
        <td>
          <% if user.standard? %>
            <%= button_to "Promote", promote_admin_user_path(user), method: :patch %>
          <% else %>
            <%= button_to "Demote", demote_admin_user_path(user), method: :patch %>
          <% end %>
        </td>
        <td>
          <%= button_to "Set Active", set_status_admin_user_path(user, status: :active), method: :patch %>
          <%= button_to "Suspend", set_status_admin_user_path(user, status: :suspended), method: :patch %>
          <%= button_to "Ban", set_status_admin_user_path(user, status: :banned), method: :patch %>
        </td>
        <td>
          <%= button_to "Delete", admin_user_path(user), method: :delete, data: { confirm: "Are you sure?" } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
